<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- bootstrap libs  -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom styles for this template -->
    <link type="text/css" rel="stylesheet" href="../css/simple-sidebar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <style>
        .table-shadow {
            box-shadow: -1px 1px 7px #888888;
        }
    </style>

</head>

<body>

    <div class="d-flex" id="wrapper">

        <%- include('../partials/responsive_side_bar_admin.ejs') %>

            <!-- Page Content -->
            <div id="page-content-wrapper">

                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">

                    <a href="javascript:void(0)" class="btn text-primary" id="menu-toggle"><i class="fa fa-bars"></i></a>
                    <div class="d-flex w-100 justify-content-end">
                        <a href="/webadminlogout" class="btn btn-danger">Logout</a>
                    </div>
                </nav>

                <!-- page content start here -->
                <div class="container-fluid d-flex justify-content-center ">
                    <!-- form update  -->
                    <div class="row w-100 p-4">
                        <div class="w-100 mb-4 border-bottom">
                            <h3>Welcome
                                <%= data.admin.name %>
                            </h3>
                        </div>
                        <form class="w-75" method="POST" action="/webadminedit">
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input type="email" name="email" value="<%= data.admin.email %>" class="form-control" id="email" aria-describedby="emailHelp"
                                    placeholder="Enter email" required>
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                    else.
                                </small>
                            </div>
                            <div class="form-group">
                                <label for="first_name"> Name</label>
                                <input type="text" name="name" class="form-control" value="<%= data.admin.name %>" id="firstname" placeholder="Enter First Name"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="mobile">Mobile</label>
                                <input type="text" name="mobile" class="form-control" value="<%= data.admin.mobile %>" id="mobile" placeholder="Enter mobile number"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="accountno">Account Number</label>
                                <input type="text" name="accountno" class="form-control" value="<%= data.admin.accountno %>" id="accountno" placeholder="Enter Account number"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="IFSC">IFSC Code</label>
                                <input type="text" name="ifsc" class="form-control" value="<%= data.admin.ifsc %>" id="ifsc" placeholder="Enter IFSC code"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="bankname">Bank Name</label>
                                <input type="text" name="bankname" class="form-control" value="<%= data.admin.bankname %>" id="bankname" placeholder="Enter Bank Name"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="pan">PAN</label>
                                <input type="text" name="pan" class="form-control" value="<%= data.admin.pan %>" id="pan" placeholder="Enter PAN" required>
                            </div>
                            <div class="form-group">
                                <label for="Aadhar">Aadhar</label>
                                <input type="text" name="aadhaar" class="form-control" value="<%= data.admin.aadhaar %>" id="aadhaar" placeholder="Enter Aadhar number"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="ename">Emergengy contact Person Name</label>
                                <input type="text" name="ename" class="form-control" value="<%= data.admin.ename %>" id="ename" placeholder="Emergengy contact Person Name"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="erelation">Emergengy Relation with Emergengy Person</label>
                                <input type="text" name="erelation" class="form-control" value="<%= data.admin.erelation %>" id="erelation" placeholder="Enter Realation with Emergency person"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="emobile">Emergency contact</label>
                                <input type="text" name="emobile" class="form-control" value="<%= data.admin.emobile %>" id="emobile" placeholder="Enter Emergengy contact "
                                    required>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>



                </div>
                <!-- Page content end here  -->
            </div>
            <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->







    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    <script>
        var perfEntries = performance.getEntriesByType("navigation");

        if (perfEntries[0].type === "back_forward") {
            location.reload(true);
        }
    </script>
</body>

</html>