<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- bootstrap libs  -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom styles for this template -->
    <link type="text/css" rel="stylesheet" href="../css/simple-sidebar.css">
    <link rel="stylesheet" type="text/css" href="../css/employee_search_input_table.css" />
    <link rel="stylesheet" type="text/css" href="../css/employee_profile_general.css" />

    <link type="text/css" rel="stylesheet" href="../css/profile_page_general.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <style>
        .table-shadow {
            box-shadow: -1px 1px 7px #888888;
        }
    </style>

</head>

<body>

    <div class="d-flex" id="wrapper">

        <%- include('../partials/responsive_side_bar_admin.ejs') %>

            <!-- Page Content -->
            <div id="page-content-wrapper">

                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">

                    <a href="javascript:void(0)" class="btn text-primary" id="menu-toggle"><i class="fa fa-bars"></i></a>
                    <div class="d-flex w-75 justify-content-end">
                        <a href="/webadminlogout" class="btn btn-danger">Logout</a>
                    </div>
                </nav>

                <!-- page content start here -->
                <div class="container-fluid mx-4">

                    <!-- profile photo with name -->

                    <div class="row justify-content-between align-items-baseline">
                        <div class="d-flex flex-wrap justify-content-start align-items-center mt-4">
                            <div id="profile-pic" class="mr-4">
                                <img src="../images/avatar.png" alt="">
                            </div>
                            <div class="d-flex flex-column">
                                <h3>
                                    <%= data.finance.name %>

                                </h3>
                                <p>(Finance Dept)</p>
                            </div>
                        </div>
                        <div><img src="../images/finance.jpg" class="mr-4" width="120" height="70" alt=""></div>

                    </div>

                    <!-- details  -->
                    <br><br>
                    <div id="profile-content" class="row justify-content-start mr-4">
                        <div class="col-lg-6 col-md-12 ">
                            <div class="pl-2 pt-3 pb-2 bg-primary text-light">
                                <h5>Personal Details</h5>
                            </div>
                            <div class="p-3 bg-white">
                                <table style="width:100%">
                                    <tr>
                                        <th>Mobile:</th>
                                        <td>
                                            <%= data.finance.mobile %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>email:</th>
                                        <td>
                                            <%= data.finance.email %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Pan:</th>
                                        <td>
                                            <%= data.finance.pan %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Aadhar:</th>
                                        <td>
                                            <%= data.finance.aadhaar %>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 bg-white">
                            <div class="pl-2 pt-2 pb-1 bg-success text-light">
                                <h5>Bank Details</h5>
                            </div>
                            <div class="p-3 bg-white">
                                <table style="width:100%">
                                    <tr>
                                        <th>Ifsc:</th>
                                        <td>
                                            <%= data.finance.ifsc %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Bank:</th>
                                        <td>
                                            <%= data.finance.bankname %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Acc no:</th>
                                        <td>
                                            <%= data.finance.accountno %>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="pl-2 pt-2 pb-1 bg-success text-light">
                                <h5>Emergency Contact Details</h5>
                            </div>
                            <div class="p-3 bg-white">
                                <table style="width:100%">
                                    <tr>
                                        <th>Emergency person name:</th>
                                        <td>
                                            <%= data.finance.ename %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Emergency contact:</th>
                                        <td>
                                            <%= data.finance.emobile %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Emergency Relation:</th>
                                        <td>
                                            <%= data.finance.erelation %>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                        </div>

                    </div>




                </div>
                <!-- Page content end here  -->
            </div>
            <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->







    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

</body>
<script>
    var perfEntries = performance.getEntriesByType("navigation");

    if (perfEntries[0].type === "back_forward") {
        location.reload(true);
    }
</script>

</html>