<body>
    <!--------------------- side nav ------------------------------>

    <div class="sidenav">
        <div class="row justify-content-center mb-4">
            <img src="./images/logo.jpg" alt="logo here" width="70" height="70">
        </div>
        <a href="#about">My Profile</a>
        <a href="#services">Mines</a>
        <a href="#contact">Finance Dept</a>
        <a href="#contact">Transporter</a>
        <a href="#contact">Area Manager</a>
        <a href="#contact">Field Staff</a>
        <a href="#reports">Invoice Reports</a>
        <button class="dropdown-btn align-self-baseline"> Vechicle Owner
            <i class="fa fa-caret-down mt-1"></i>
        </button>
        <div class="dropdown-container">
            <a href="#">Vehicle Owner Request</a>
            <a href="#">All Vehicle Owners</a>
        </div>
        <a href="#resale">Resale</a>
        <a href="#rewards">Rewards</a>
    </div>
    <!------------------------------- right content -------------------------------------------->
    <div class="main">
        <div class="container-fluid">
            <div id="top-nav" class="row p-2 bg-white justify-content-end">
                <a href="/logout" class="btn btn-danger p-2 rounded mr-4">Logout</a>
            </div>
            <!---------------------------- main content row start here-->
            <div class="row p-3 ">
                <div class="w-100 text-center text-danger border-bottom">
                    <h4>All <span class="text-primary">Finance</span> Dept. Employees</h4>
                </div>
                <br>
            </div>
            <div class="container">
                <div class="row justify-content-center">
                    <div id="search-input-row" class="w-75">
                        <input type="text" class="w-100 rounded" id="searchInput" onkeyup="filterEmployee()" placeholder="  Search for anything to filter data.."
                            title="Type in a name">
                    </div>
                </div>
                <br>
                <div class="row">
                    <table id="EmployeesTable">
                        <tr class="header">
                            <th>Name</th>
                            <th>Mobile</th>
                            <th>email</th>
                        </tr>
                        <% for (var i =0; i <=data.fieldstaff.length;  i++ ) { %>
                            <tr>
                                <td> <a href="/specificfinance/<%= data.fieldstaff.mobile %>">
                                        <%= data.finance[i].firstname %>
                                            <%= data.fieldstaff[i].lastname %></a>
                                </td>
                                <td>
                                    <%= data.finance[i].mobile %>
                                </td>
                                <td>
                                    <%= data.finance[i].email %>
                                </td>
                            </tr>
                            <% } %>
                    </table>

                </div>
            </div>
        </div>
    </div>

</body>


<script>

    function filterEmployee() {
        var input, filter, table, tr, td, i, j, txtValue, no_of_col;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("EmployeesTable");
        tr = table.getElementsByTagName("tr");
        no_of_col = tr[0].getElementsByTagName('th').length;
        for (i = 0; i < tr.length; i++) {
            for (j = 0; j < no_of_col; j++) {
                td = tr[i].getElementsByTagName("td")[j];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    console.log(txtValue);
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                        break;
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }

        }
    }
</script>

<script src="./js/bootstrap/bootstrap.min.js"></script>
<script src="./js/basic_structure.js"></script>

</html>