                                </tr>
                                <tr>
                                    <th>Body Type</th>
                                    <td>:
                                        <%= data.mine.bodytype %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Loadings</th>
                                    <td>:
                                        <% for (var i =0; i < data.mine.loading.length;  i++ ) { %>
                                        <%= data.mine.loading[i] + " , " %>
                                        <% } %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>tyres</th>
                                    <td>:
                                        <%= data.mine.tyres %>
                                    </td>
                                </tr>

                                <tr>
                                    <th>Mine active</th>
                                    <td>:
                                        <% if( data.mine.active == true) { %>
                                        Active
                                        <% } else { %>
                                            Inactive
                                            <% }  %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Lat-long:</th>
                                    <td>:
                                        <%= data.mine.latitude %>
                                            <%= data.mine.longitude %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Rate:</th>
                                    <td>:
                                        <%= data.mine.rate %> Rs/ sqft
                                    </td>
                                </tr>
                                <tr>
                                    <th>ETL:</th>
                                    <td>:
                                        <%= data.mine.etl %> hours
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="w-25 shadow">
