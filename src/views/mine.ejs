                                    <div class="radio">
                                        <label class="radio-inline "><input class="mr-1" type="radio" id="inactive" name="active"
                                                value="false">Inactive</label>
                                        <label class="radio-inline "><input class="mr-1" type="radio" id="active" name="active"
                                                value="true">Active</label>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>

