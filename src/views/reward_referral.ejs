<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- bootstrap libs  -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom styles for this template -->
    <link type="text/css" rel="stylesheet" href="../css/simple-sidebar.css">
    <link rel="stylesheet" type="text/css" href="../css/employee_search_input_table.css" />

    <link type="text/css" rel="stylesheet" href="../css/profile_page_general.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <style>
        .table-shadow {
            box-shadow: -1px 1px 7px #888888;
        }
    </style>

</head>

<body>

    <div class="d-flex" id="wrapper">

        <%- include('../partials/responsive_side_bar_admin.ejs') %>

            <!-- Page Content -->
            <div id="page-content-wrapper">

                <nav class="navbar navbar-expand-lg navbar-light d-flex justify-content-between bg-light border-bottom">

                    <a href="javascript:void(0)" class="btn text-primary" id="menu-toggle"><i class="fa fa-bars"></i></a>
                    <div class="">
                        <a href="/webadminlogout" class="btn btn-danger">Logout</a>
                    </div>
                </nav>

                <!-- page content start here -->
                <div class="container-fluid mt-4">
                    <div class="row mb-4 d-flex justify-content-center">
                        <h3>Referral and Rewards Section</h3>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <!-- referral form -->
                        <div class="col-lg-5 mr-2 col-md-6 mt-4 col-sm-8">
                            <div class="form p-2  bg-light shadow border rounded">
                                <h4 class="text-center p-2 rounded-bottom bg-primary text-white"> Update Referrals</h4>
                                <form method="POST" class="p-4" action="/reward_referral/referral" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label for="displaytext">Display Text</label>
                                        <textarea class="form-control" rows="5" name="text" id="displaytext"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="files">Display Images:</label>
                                        <input type="file" id="files" name="image">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>

                        <!-- rewards form -->
                        <div class="col-lg-5 mr-2  col-md-6 mt-4 col-sm-8">
                            <div class="form p-2  bg-light shadow border rounded">
                                <h4 class="text-center p-2 rounded-bottom bg-success text-white"> Update Rewards</h4>
                                <form method="POST" class="p-4" action="/reward_referral/reward" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label for="displaytext">Display Text</label>
                                        <textarea class="form-control" rows="5" name="text" id="displaytext"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="files">Display Images:</label>
                                        <input type="file" id="files" name="image">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page content end here  -->
            </div>
            <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->







    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

</body>

</html>