<script>

    function showRequestDetails(index, mobile) {
        var right_pane = document.getElementById("right_side_pane");
        if (right_pane.style.display == "block") {
            right_pane.style.display = "none";
        }
        else {

            //send ajax request to a api
            var xmlhttp = new XMLHttpRequest();
            var url = "/getvehicleownerdata/" + mobile;
            xmlhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    var data = JSON.parse(this.responseText);
                  
                    placeInPane(data, mobile);
                }
            };
            xmlhttp.open("GET", url, true);
            xmlhttp.send();
            right_pane.style.right = "0px";
            right_pane.style.display = "block";
        }
    }
    function close_side_pane() {
        var right_pane = document.getElementById("right_side_pane");
        right_pane.style.display = "none";
    }
    function placeInPane(data, mobile) {
        var i = 0;

        var keys = Object.keys(data)
       

        document.getElementById('name').innerHTML = data.name;
        document.getElementById('email').innerHTML = data.email;
        document.getElementById('mobile').innerHTML = data.mobile;
        document.getElementById('pan').innerHTML = data.pan;
        document.getElementById('tds').innerHTML = data.tds;
        document.getElementById('accountno').innerHTML = data.accountno;
        document.getElementById('bankname').innerHTML = data.bankname;
        document.getElementById('ifsc').innerHTML = data.ifsc;


        document.getElementById('bankimage').setAttribute('src', "https://transfly-ftr2t.ondigitalocean.app/webvehicleowner/image/" + data.mobile + "/bankimage")
        document.getElementById('bankimage_a').setAttribute('href', "https://transfly-ftr2t.ondigitalocean.app/webvehicleowner/image/" + data.mobile + "/bankimage");

        document.getElementById('panimage_a').setAttribute('href', "https://transfly-ftr2t.ondigitalocean.app/webvehicleowner/image/" + data.mobile + "/panimage");
        document.getElementById('panimage').setAttribute('src', "https://transfly-ftr2t.ondigitalocean.app/webvehicleowner/image/" + data.mobile + "/panimage")

        document.getElementById('tdsimage').setAttribute('src', "https://transfly-ftr2t.ondigitalocean.app/webvehicleowner/image/" + data.mobile + "/tdsimage")
        document.getElementById('tdsimage_a').setAttribute('href', "https://transfly-ftr2t.ondigitalocean.app/webvehicleowner/image/" + data.mobile + "/tdsimage")

        document.getElementById("approve_btn").setAttribute('href', "/vehicleowner_request_action/" + mobile)
        document.getElementById("reject_form").setAttribute('action', "/vehicleowner_request_action/" + mobile)

    }
</script>

